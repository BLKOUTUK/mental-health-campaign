                                let value = context.parsed.y;
                                if (value === 0.1) return 'Baseline (general population)';
                                if (value === 1.0) return 'White gay men (comparison group)';
                                if (value === 5.0) return '5x more likely (400% disparity)';
                                return value + 'x';
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 6,
                        title: {
                            display: true,
                            text: 'Relative Risk (multiplier)',
                            font: {
                                size: 12,
                                weight: 'bold'
                            }
                        },
                        ticks: {
                            callback: function(value) {
                                return value + 'x';
                            }
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Population Group',
                            font: {
                                size: 12,
                                weight: 'bold'
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>